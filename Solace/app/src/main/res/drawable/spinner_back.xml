<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="@android:color/black" />

            <stroke
                android:width="1dp"
                android:color="@color/color_clickable" />

            <padding
                android:bottom="10dp"
                android:left="16dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@android:drawable/arrow_down_float" />
    </item>
</layer-list>