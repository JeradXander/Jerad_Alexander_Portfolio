<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="3dp"
    app:cardBackgroundColor="@color/colorPrimary">

    <!--layout for chatlist-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/profile_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/avatar_back"
            android:src="@drawable/profile_place"
            android:layout_margin="8dp"/>

        <ImageView android:id="@+id/user_online_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/online_shape"
            android:src="@drawable/online_shape"
            android:layout_margin="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView android:id="@+id/uNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/their_name"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toEndOf="@+id/profile_avatar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView android:id="@+id/last_messagetV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/their_last_message"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/uNameTV"
            android:layout_toRightOf="@+id/profile_avatar"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:maxLines="2"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>